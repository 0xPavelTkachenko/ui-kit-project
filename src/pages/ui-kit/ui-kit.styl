html
  $font-size = 12px

  color #000
  background-color #fff
  font-size $font-size
  font-family "Lato", Arial, sans-serif

  @media only screen and (max-width: 720px)
    font-size $font-size * 0.6

.main-wrapper
  min-width 26.66666666rem
  max-width 58.33333333rem
  margin 0 auto
  display flex
  flex-direction column
  align-items center

  &__buttons
    width 67%
    margin-top 4rem

  &__arrow-buttons
    width 60%
    margin-top 4.75rem

  &__percentages-pie-chart
    width 90%
    margin-top 1.8rem

  &__sliders
    width 86.2%
    margin-top 2rem

  &__stages
    width 85%
    margin-top 2.35rem

  &__form-elements
    width 86%
    margin-top 4rem

  &__search-dropdown-user-profile
    width 85%
    margin-top 5.5rem

  &__news-events
    width 85%
    margin-top 7.7rem

  &__location
    width 84.5%
    margin-top 4rem

  &__calendar-messaging
    width 85%
    margin-top 4.1rem

  &__video
    width 85%
    margin-top 4.4rem
