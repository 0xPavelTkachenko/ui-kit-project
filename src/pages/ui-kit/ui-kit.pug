doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    meta(name="keywords", content="ui kit")
    meta(name="description", content="Набор элементов для создания сайта.")
    link(rel="shortcut icon" type="image/x-icon" href="./assets/favicons/favicon.ico")
    title UI Kit
  body
    include ../../components/ui-kit/buttons/buttons
    include ../../components/ui-kit/arrow-buttons/arrow-buttons
    include ../../components/ui-kit/percentages-pie-chart/percentages-pie-chart
    include ../../components/ui-kit/sliders/sliders
    include ../../components/ui-kit/stages/stages
    include ../../components/ui-kit/form-elements/form-elements
    include ../../components/ui-kit/search-dropdown-user-profile/search-dropdown-user-profile
    include ../../components/ui-kit/news-events/news-events
    include ../../components/ui-kit/location/location
    include ../../components/ui-kit/calendar-messaging/calendar-messaging
    include ../../components/ui-kit/video/video

    main.wrapper

      section.wrapper__buttons
        +buttons()

      section.wrapper__arrow-buttons
        +arrow-buttons()

      section.wrapper__percentages-pie-chart
        +percentages-pie-chart()

      section.wrapper__sliders
        +sliders()

      section.wrapper__stages
        +stages()

      section.wrapper__form-elements
        +form-elements()

      section.wrapper__search-dropdown-user-profile
        +search-dropdown-user-profile()

      section.wrapper__news-events
        +news-events()

      section.wrapper__location
        +location()

      section.wrapper__calendar-messaging
        +calendar-messaging()

      section.wrapper__video
        +video()
