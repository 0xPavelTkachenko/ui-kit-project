$color-gray = #e5e5e5
$color-diamond = #4eb7a8
$color-red = #e75735

.dropdown
  .minict_wrapper
    width 100%
    height 2.333333333rem
    background-color $color-gray
    border none
    border-radius 0.25rem
    padding-top 0.333333333rem

    &:hover, &.active
      box-shadow 0 0 0.166666666rem #000

    &::before
      content ""
      width 2.75rem
      height 100%
      background-color $color-diamond
      border-radius 0 0.25rem 0.25rem 0
      position absolute
      top 0
      right 0

    &::after
      content ""
      width 2.75rem
      height 100%
      background url("./assets/dropdown-icon.png") no-repeat center
      border-radius 0 0.25rem 0.25rem 0
      cursor pointer
      transition 0.4s

    &.active::after
      content ""
      transform rotate(180deg)
      transition 0.4s

    span
      cursor pointer
      font-size 1.166666666rem
      padding-left 1.083333333rem
      padding-top 0.083333333rem
      word-spacing -0.166666666rem

    ul
      border none
      border-radius 0 0 0.5rem 0.5rem

    ul li
      color #fff
      background-color $color-diamond

    ul li:hover
      background-color #fcfcfc
      color #111

  &_red
    .minict_wrapper
      &::before
        background-color $color-red

      ul li
        background-color $color-red
