.arrow-btn
  width 50px
  height 50px

  background url('./components/arrow-btn/arrow-btn-sprite.png') no-repeat 0 0

  border 0
  outline 0

  cursor pointer

  display inline-block

  &:hover:not(&_disabled)
    background-position -50px 0

  &_disabled
    background-position -100px 0

    cursor default

  &_right
    transform: scaleX(-1)
