.arrow-btn
  width 50px
  height 50px

  background-image url('arrow-btn.png')
  background-color transparent
  background-repeat no-repeat
  background-size contain

  border 0
  outline 0

  cursor pointer

  display inline-block

  &:hover:not(&_disabled)
    background-image url('arrow-btn-hovered.png')

.arrow-btn_right
  transform: scaleX(-1)

.arrow-btn_disabled
  background-image url('arrow-btn-disabled.png')
  cursor default

.arrow-btn_small
  width 25px
  height 25px
