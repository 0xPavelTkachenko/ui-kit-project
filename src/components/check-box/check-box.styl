$color-gray = #e5e5e5
$color-diamond = #4eb7a8
$color-red = #e75735

.check-box
  display inline-block
  width 2rem
  height 2rem

  &__checkbox
    display none

  &__pseudo-checkbox
    width 100%
    height 100%
    border-radius 50%
    background url("./assets/check-mark.png") center center no-repeat
    background-size 45.83% 33.33%
    background-color $color-gray
    cursor pointer
    display inline-block
    transition-duration 0.7s
    transition-property background-color

  &__checkbox:checked + &__pseudo-checkbox
    background-image url("./assets/check-mark-checked.png")
    background-color $color-diamond

  &_color_red
    & ^[0]__checkbox:checked + ^[0]__pseudo-checkbox
      background-color $color-red
