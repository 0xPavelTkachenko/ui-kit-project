mixin check-box(o)
  -
    o = o || {};
    o.color = typeof o.color === "string" ? "check-box_" + o.color : undefined;
    o.checked = typeof o.checked === "boolean" ? o.checked : undefined;

  label.check-box(class=o.color)
    input.check-box__checkbox(type="checkbox", checked=o.checked)
    span.check-box__pseudo-checkbox
