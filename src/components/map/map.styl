$color-diamond = #4eb7a8
$color-red = #e75735

.map
  width 593px
  height 22.66666666rem
  overflow hidden
  border-radius 0.25rem
  color #fff

  &__window
    height 16.91666666rem

  &__footer
    position relative
    height 5.75rem
    display flex
    align-items center
    background-color $color-diamond

  &__title
    margin-right 2.1rem
    margin-left 2.166666666rem
    font-size 2.5rem
    word-spacing -0.166666666rem
    max-width 50%
    white-space nowrap
    overflow hidden
    text-overflow ellipsis

  &__address
    width 24%
    font-weight bold
    text-transform uppercase
    letter-spacing 0.083333333rem
    word-spacing 0.083333333rem

  &__buttons
    margin-right 1.583333333rem
    position absolute
    right 0

  &__location-button, &__pin-button
    width 2.5rem
    height 2.5rem
    border none
    cursor pointer

  &__location-button
    background url("./assets/map-sprite.png") no-repeat 0 0
    margin-right 1.166666666rem

  &__pin-button
    background url("./assets/map-sprite.png") no-repeat -2.5rem 0

  &_red
    & ^[0]__footer
      background-color $color-red
