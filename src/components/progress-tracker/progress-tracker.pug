- const getFullClassname = htmlWebpackPlugin.options.functions.getFullClassname;

mixin progress-tracker(options)
  -
    options = options || [];
    options.stepCount = options.stepCount || 0;
    options.activeStep = options.activeStep || 0;

    if (options.stepCount < 0) {
      options.stepCount = 0;
    }

    if (options.activeStep < 0) {
      options.activeStep = 0;
    } else if (options.activeStep > options.stepCount) {
      options.activeStep = options.stepCount
    }

  div(class=getFullClassname('progress-tracker', options.classname, options.modes))
    - for (let i = 1; i <= options.activeStep; i++)
    -   if (i !== options.activeStep)
          .progress-tracker__step.progress-tracker__step_complete
            .progress-tracker__marker=i
    -   else
          .progress-tracker__step.progress-tracker__step_active
            .progress-tracker__marker=i

    - for (let i = options.activeStep + 1; i <= options.stepCount; i++)
        .progress-tracker__step
          .progress-tracker__marker=i
