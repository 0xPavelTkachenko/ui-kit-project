$color-gray = #e5e5e5
$color-diamond = #4eb7a8
$color-red = #e75735

.info-block
  background-color $color-gray
  border-radius 0.25rem
  color #fff
  overflow hidden
  position relative

  &__image
    width 100%
    height 100%
    object-fit contain
    position absolute
    top 50%
    transform translateY(-50%)

  &__content
    width 100%
    height 100%
    background-color $color-diamond
    left 100%
    z-index 1
    position absolute
    left 100%
    transition 0.7s

  &:hover &__content
    left 33%

  &_red
    & ^[0]__content
      background-color $color-red
