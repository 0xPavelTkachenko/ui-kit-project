$color-gray = #e5e5e5
$color-diamond = #4eb7a8
$color-red = #e75735

.info-block
  height 100%
  background-color $color-gray
  border-radius 0.25rem
  color #fff
  overflow hidden
  position relative

  &__image
    width 100%
    height 100%
    object-fit cover
    position absolute

  &__content
    width 67.014%
    height 100%
    background-color $color-diamond
    z-index 1
    position relative
    left 33%

  &_red
    & ^[0]__content
      background-color $color-red
