mixin user-profile(options)
  -
    options = options ? options : {};
    options.classname = options.classname ? options.classname + ' ' : '';
    options.modes = options.modes ? options.modes : [];

    let photoStyle = '';
    if (options.photo) {
      photoStyle = 'background-image: url(\'' + options.photo + '\'); ' +
                   'background-size: contain; '                         +
                   'background-repeat: no-repeat; '                     +
                   'background-position: center;';
    }

    let modes = '';
    for (let i = 0; i < options.modes.length; i++) {
      modes += 'user-profile_' + options.modes[i];
      if (i < options.modes.length - 1) {
        modes += ' ';
      }
    }

  .user-profile(class=options.classname + modes)
    .user-profile__photo(style=photoStyle)
    .user-profile__dialog
      .user-profile__triangle
      .user-profile__name=options.name
      .user-profile__job=options.job
      .user-profile__contacts
        a.user-profile__facebook(href=options.facebook, target='_blank')
        a.user-profile__twitter(href=options.twitter, target='_blank')
        a.user-profile__dribbble(href=options.dribbble, target='_blank')
