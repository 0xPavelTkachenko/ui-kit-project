include ../speech-bubble/speech-bubble

- const getFullClassname = htmlWebpackPlugin.options.functions.getFullClassname;

mixin user-profile(options)
  -
    options = options || {};

    let photoStyle = '';
    if (options.photo) {
      photoStyle = 'background-image: url(\'' + options.photo + '\'); ' +
                   'background-size: contain; '                         +
                   'background-repeat: no-repeat; '                     +
                   'background-position: center;';
    }

  div(class=getFullClassname('user-profile', options.classname, options.modes))
    .user-profile__photo(style=photoStyle)
    +speech-bubble({classname: 'user-profile__info'})
      .user-profile__name=options.name
      .user-profile__job=options.job
      .user-profile__contacts
        a.user-profile__facebook(href=options.facebook, target='_blank')
        a.user-profile__twitter(href=options.twitter, target='_blank')
        a.user-profile__dribbble(href=options.dribbble, target='_blank')
