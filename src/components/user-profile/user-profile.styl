$color-gray = #e5e5e5
$color-dark-gray = #4f4f4f
$color-diamond = #4eb7a8
$color-red = #e75735

.user-profile
  display flex
  align-items center

  &__avatar-wrapper
    width 7rem
    height 7rem
    border 0.416666666rem solid $color-gray
    border-radius 50%
    margin-right 1rem

  &__avatar
    width 100%
    height 100%

  &__speech-bubble-wrapper
    flex-grow 1

  &__info
    padding-top 0.916666666rem
    padding-bottom 1.083333333rem

  &__name, &__job
    color #fff
    text-align center

  &__name
    font-size 1.333333333rem
    margin-bottom 0.25rem
    letter-spacing 0.083333333rem

  &__job
    font-size 0.833333333rem
    font-weight bold
    letter-spacing 0.083333333rem
    text-transform uppercase
    margin-bottom 0.916666666rem

  &__contacts
    display flex
    justify-content space-between
    padding 0 2.5rem

  &__facebook, &__twitter, &__dribbble
    width 2.083333333rem
    height 2.083333333rem
    display inline-block
    background-image url("./assets/contacts-sprite.png")
    background-repeat no-repeat

  &__facebook
    background-position 0 0

  &__twitter
    background-position -2.083333333rem 0

  &__dribbble
    background-position -4.166666666rem 0

  &_gray
    & ^[0]__name
      color $color-red

    & ^[0]__job
      color $color-dark-gray

    & ^[0]__facebook, & ^[0]__twitter, & ^[0]__dribbble
      background-image url("./assets/contacts-sprite-gray.png")

  &_right
    flex-direction row-reverse

    & ^[0]__avatar-wrapper
      margin 0 0 0 1rem

  &_top
    flex-direction column
    align-items center

    & ^[0]__speech-bubble-wrapper
      width 100%

    & ^[0]__avatar-wrapper
      margin 0 0 1rem 0

  &_bottom
    flex-direction column-reverse

    & ^[0]__speech-bubble-wrapper
      width 100%

    & ^[0]__avatar-wrapper
      margin 1rem 0 0 0
