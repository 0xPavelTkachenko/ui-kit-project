$color-diamond = #4EB7A8
$color-red = #E75735
$color-gray = #E5E5E5

.news
  @require '../../fonts/fonts.styl'

  font-family 'Lato'

  background-color $color-gray
  border-radius 3px
  color #fff
  overflow hidden

  &__content
    width 51.3%

    padding 18px 23px 33px 23px

    float right

  &__title
    font-size 2.2rem
    line-height 28px
    margin-bottom 10px

  &__date
    font-weight bold
    text-transform uppercase
    word-spacing 2px
    margin-bottom 12px

  &__description
    line-height 14px

.news_red
  .news
    &__content
      background-color $color-red
