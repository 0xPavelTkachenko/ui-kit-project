.event
  height 100%

  &__content
    padding 0.5rem 0 2.25rem 1.5rem

  &__date
    display flex
    align-items flex-end
    padding-bottom 0.666666666rem

  &__day
    font-size 6rem
    letter-spacing -0.166666666rem

  &__month
    font-size 2.2rem
    letter-spacing 0.166666666rem
    padding-bottom 1rem
    padding-left 1.166666666rem

  &__title
    font-weight bold
    text-transform uppercase
    word-spacing 0.25rem
    padding 0 0 0.25rem 0.25rem

  &__text
    line-height 1.166666666rem
    padding 0 0 1.5rem 0.25rem

  &__button-wrapper
    padding 0 2.75rem 0 1.083333333rem
