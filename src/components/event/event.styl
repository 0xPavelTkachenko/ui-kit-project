@require '../info-block/info-block.styl'
@require '../btn/btn.styl'

$color-diamond = #4EB7A8
$color-dark-diamond = #379285

.event
  .info-block__content
    padding-bottom 24px

  &__date
    display flex
    align-items flex-end
    margin -12px 0 8px -4px

  &__day
    font-size 6rem
    letter-spacing -2px

  &__month
    font-size 2.2rem
    letter-spacing 2px
    margin-bottom 12px
    margin-left 14px

  &__title
    font-weight bold
    text-transform uppercase
    word-spacing 3px
    margin-bottom 3px

  &__description
    line-height 14px
    margin-bottom 18px

  &__btn-wrapper
    text-align center

  &__btn
    background-color #fff
    border-color #fff
    box-shadow 0 3px $color-dark-diamond
    color $color-diamond
    padding 0 12px
