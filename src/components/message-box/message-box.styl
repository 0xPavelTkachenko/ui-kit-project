$color-gray = #e5e5e5
$color-diamond = #4eb7a8
$color-red = #e75735
$color-light-gray = #f2f2f2
$color-dark-diamond = #46ab9d
$color-dark-red = #bf3e1f

.message-box
  border-radius 0.25rem

  &__name
    color #fff
    background-color $color-diamond
    text-align center
    font-size 2.5rem
    padding-top 20px
    padding-bottom 26px
    border-bottom 34px solid $color-dark-diamond

  &__container
    padding 0 1.833333333rem 2.333333333rem 1.833333333rem
    background-color $color-light-gray

  &__row
    display flex
    justify-content space-between
    padding 0 0.166666666rem
    height 5.166666666rem

  &__avatar-wrapper
    width 7rem
    height 7rem
    border 0.416666666rem solid $color-gray
    border-radius 50%
    transform translateY(-50%)

  &__chat-wrapper, &__camera-wrapper
    width 2.25rem
    height 2.25rem
    border none
    cursor pointer
    margin-top 1.5rem

  &__avatar, &__chat, &__camera
    width 100%
    height 100%

  &__chat, &__camera
    border none
    cursor pointer

  &__chat
    background url("./assets/message-box-sprite.png") no-repeat 0 0

  &__camera
    background url("./assets/message-box-sprite.png") no-repeat -2.25rem 0

  &__speech-bubble-wrapper
    color #868686
    letter-spacing 0.083333333rem
    word-spacing -0.083333333rem
    margin-bottom 1.416666666rem

  &__message
    padding 1.333333333rem 1.666666666rem 2rem 1.666666666rem

  &__textarea
    width 100%
    color #777777
    background-color $color-gray
    border 0.25rem solid #fff
    border-radius 0.5rem
    box-sizing border-box
    padding 1.416666666rem
    padding-bottom 2.916666666rem
    margin-bottom 1.083333333rem
    word-spacing -0.3rem
    resize none

  &__textarea:focus
    outline none
    box-shadow 0 0 0.166666666rem #000

  &_red
    & ^[0]__name
      background-color $color-red
      border-bottom 2.833333333rem solid $color-dark-red
