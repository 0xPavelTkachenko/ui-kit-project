.form-elements
  &__title-wrapper
    margin-bottom 3.9rem

  &__container
    display flex

    @media only screen and (max-width: 400px)
      flex-direction column
      align-items center

  &__form
    width 24.6rem
    margin-right 8rem

    @media only screen and (max-width: 400px)
      margin-right 0
      margin-bottom 5rem

  &__form-row:not(:last-child)
    margin-bottom 0.5rem

  &__form-row:nth-child(1), &__form-row:nth-child(2)
    display flex
    align-items center

    .input
      width 18rem

    .input:valid ~ ^[0]__failed-info
      display none

    .input:invalid ~ ^[0]__failed-info
      display block

    .input:invalid ~ ^[0]__success-info
      display none

  &__form-row:last-child
    display flex
    justify-content flex-end

  &__success-info, &__failed-info
    flex-grow 1
    margin 0 0.4rem

  &__speech-bubble-content-wrapper
    color #fff
    text-align center
    padding 0.6rem 0
    text-transform uppercase
    font-size 0.9rem
    font-weight bold

  &__button-wrapper
    width 9.8rem
    margin-right 0.3rem

  &__toggles
    margin-bottom 2.8rem

    @media only screen and (max-width: 400px)
      margin-bottom 5rem

  &__toggles, &__tick-boxes
    width 11rem

  &__toggles-title-wrapper, &__tick-boxes-title-wrapper
    margin-bottom 2.5rem

  &__toggles-container, &__tick-boxes-container
    display flex
    justify-content space-between

  &__tick-boxes-container
    padding 0 3.3rem 0 2.3rem
