.search-dropdown-user-profile
  display flex
  justify-content space-between

  @media only screen and (max-width: 400px)
    flex-direction column
    align-items center

  &__search-dropdown-title-wrapper
    margin-bottom 1.7rem
    padding-right 0.8rem

  &__user-profile-title-wrapper
    margin-bottom 2.5rem
    padding-right 1.5rem

  &__search-dropdown
    width 24rem

  &__user-profile
    width 22.6rem
    padding-right 0.2rem

    @media only screen and (max-width: 400px)
      margin-top 5rem
      padding-right 0

  &__search-dropdown-row:not(:last-child)
    margin-bottom 1.4rem

  &__user-profile-row:not(:last-child)
    margin-bottom 2.1rem
