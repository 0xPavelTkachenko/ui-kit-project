.calendar-messaging
  &__calendar-title-wrapper, &__messaging-title-wrapper
    margin-bottom 2.2rem

  &__calendar-title-wrapper
    padding-right 0.5rem

  &__messaging-title-wrapper
    padding-right 0.9rem

  &__container
    display flex
    justify-content space-between

    @media only screen and (max-width: 400px)
      flex-direction column
      align-items center

  &__calendar-wrapper
    width 23.3rem

  &__message-box-wrapper
    width 24rem

    @media only screen and (max-width: 400px)
      margin-top 3rem
