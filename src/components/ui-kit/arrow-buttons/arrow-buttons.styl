.arrow-buttons
  &__title-wrapper
    margin-bottom 3rem

  &__container
    display flex
    justify-content space-between

    @media only screen and (max-width: 400px)
      flex-direction column
      align-items center

  &__button-pair
    display flex
    justify-content space-between
    flex-basis 29.5%

    @media only screen and (max-width: 400px)
      width 10rem

  &__button-pair:not(:last-child)
    margin-bottom 2rem
