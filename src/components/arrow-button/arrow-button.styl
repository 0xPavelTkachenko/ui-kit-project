$color-gray = #e5e5e5
$color-diamond = #4eb7a8
$color-red = #e75735

.arrow-button
  width 4.166666666rem
  height 4.166666666rem
  cursor pointer
  display inline-block
  background-color $color-diamond
  border 0.25rem solid $color-diamond
  border-radius 50%
  position relative
  outline 0

  &__triangle
    width 30%
    height 30%
    display inline-block
    border solid #fff
    border-width 0.25rem 0 0 0.25rem
    position absolute
    top 50%
    left 50%
    transform translate(-30%, -50%) rotate(-45deg)

  &:hover
    background-color #fff

    & ^[0]__triangle
      border-color $color-diamond

  &_red
    background-color $color-red
    border-color $color-red

    &:hover ^[0]__triangle
      border-color $color-red

  &_inversed
    background-color #fff

    & ^[0]__triangle
      border-color $color-diamond

    &:hover
      background-color $color-diamond

      & ^[0]__triangle
        border-color #fff

    &^[0]_red
      & ^[0]__triangle
        border-color $color-red

      &:hover
        background-color $color-red

        & ^[0]__triangle
          border-color #fff

  &_disabled
    cursor default
    border-color $color-gray
    background-color $color-gray

    & ^[0]__triangle
      border-color #fff

    &:hover
      border-color $color-gray
      background-color $color-gray

      & ^[0]__triangle
        border-color #fff

  &_small
    width 3.125rem
    height 3.125rem
    border-width 0.1875rem

    & ^[0]__triangle
      border-width 0.1875rem 0 0 0.1875rem

  &_right
    transform scaleX(-1)
