@require "../colors"

.arrow-button
  width 4.166666666rem
  height 4.166666666rem
  cursor pointer
  display inline-block
  background-color $diamond
  border 0.25rem solid $diamond
  border-radius 50%
  position relative
  outline 0

  &__triangle
    width 30%
    height 30%
    display inline-block
    border solid #fff
    border-width 0.25rem 0 0 0.25rem
    position absolute
    top 50%
    left 50%
    transform translate(-30%, -50%) rotate(-45deg)

  &:hover
    background-color #fff

    & ^[0]__triangle
      border-color $diamond

  &_color_red
    background-color $red
    border-color $red

    &:hover ^[0]__triangle
      border-color $red

  &_inversed
    background-color #fff

    & ^[0]__triangle
      border-color $diamond

    &:hover
      background-color $diamond

      & ^[0]__triangle
        border-color #fff

    &^[0]_color_red
      & ^[0]__triangle
        border-color $red

      &:hover
        background-color $red

        & ^[0]__triangle
          border-color #fff

  &_disabled
    cursor default
    border-color $gray
    background-color $gray

    & ^[0]__triangle
      border-color #fff

    &:hover
      border-color $gray
      background-color $gray

      & ^[0]__triangle
        border-color #fff

  &_size_small
    width 3.125rem
    height 3.125rem
    border-width 0.1875rem

    & ^[0]__triangle
      border-width 0.1875rem 0 0 0.1875rem

  &_direction_right
    transform scaleX(-1)
