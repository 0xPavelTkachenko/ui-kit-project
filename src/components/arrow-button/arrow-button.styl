.arrow-button
  width 50px
  height 50px

  background-image url('arrow-button.png')
  background-color transparent
  background-repeat no-repeat
  background-size contain

  border 0
  outline 0

  cursor pointer

  display inline-block

  &:hover:not(&_disabled)
    background-image url('arrow-button-hovered.png')

.arrow-button_transform-right
  transform: scaleX(-1)

.arrow-button_state-disabled
  background-image url('arrow-button-disabled.png')
  cursor default

.arrow-button_size-small
  width 25px
  height 25px
