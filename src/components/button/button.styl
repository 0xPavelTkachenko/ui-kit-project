@require "../colors"

@keyframes ripple-effect
  to
    opacity 0
    transform scale(2.5)

.button
  width 100%
  height 2.666666666rem
  background-color $diamond
  box-shadow 0 0.25rem $darkest-diamond
  position relative
  padding 0 2.714166666rem
  font-size 1rem
  font-weight bold
  letter-spacing 0.041666666rem
  text-transform uppercase
  border none
  border-radius 0.208333333rem
  cursor pointer
  color #fff
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

  &:hover
    background-color $light-diamond
    box-shadow 0 0.25rem $diamond

  &:active
    box-shadow none
    transform translateY(0.25rem)

  &__ripple
    display inline-block
    animation ripple-effect 0.6s linear
    animation-fill-mode forwards
    background-color rgba(255, 255, 255, 0.75)
    border-radius 50%
    position absolute
    transform scale(0)

  &_color_red
    background-color $red
    box-shadow 0 0.25rem $darkest-red

    &:hover
      background-color $light-red
      box-shadow 0 0.25rem $red

    &:active
      box-shadow none

  &_size_small
    padding 0 1.394166666rem
    height 1.833333333rem
    font-size 0.833333333rem

  &_padding_non-padding
    padding 0

  &_inversed
    color $diamond
    background-color #fff
    border-top 0.083333333rem solid $diamond
    border-right 0.083333333rem solid $diamond
    border-left 0.083333333rem solid $diamond
    box-shadow 0 0.25rem $dark-diamond

    &:hover
      color #fff
      background-color $diamond
      box-shadow 0 0.25rem $dark-diamond
      border none

    &:active
      box-shadow none

    &^[0]_color_red
      color $red
      border-top 0.083333333rem solid $red
      border-right 0.083333333rem solid $red
      border-left 0.083333333rem solid $red
      box-shadow 0 0.25rem $dark-red

      &:hover
        color #fff
        background-color $red
        box-shadow 0 0.25rem $dark-red

      &:active
        box-shadow none
