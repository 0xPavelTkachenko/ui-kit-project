$color-diamond = #4eb7a8
$color-red = #e75735
$color-light-diamond = #71c5b9
$color-light-red = #eb785d
$color-dark-diamond = #28a290
$color-dark-red = #bf3e1f

@keyframes ripple-effect
  to
    opacity 0
    transform scale(2.5)

.button
  width 100%
  height 2.666666666rem
  background-color $color-diamond
  box-shadow 0 0.25rem $color-dark-diamond
  position relative
  padding 0 2.714166666rem
  font-size 1rem
  font-weight bold
  letter-spacing 0.041666666rem
  text-transform uppercase
  border none
  border-radius 0.208333333rem
  cursor pointer
  color #fff
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

  &:hover
    background-color $color-light-diamond
    box-shadow 0 0.25rem $color-diamond

  &:active
    box-shadow none
    transform translateY(0.25rem)

  &__ripple
    display inline-block
    animation ripple-effect 0.6s linear
    animation-fill-mode forwards
    background-color rgba(255, 255, 255, 0.75)
    border-radius 50%
    position absolute
    transform scale(0)

  &_red
    background-color $color-red
    box-shadow 0 0.25rem $color-dark-red

    &:hover
      background-color $color-light-red
      box-shadow 0 0.25rem $color-red

    &:active
      box-shadow none

  &_small
    padding 0 1.394166666rem
    height 1.833333333rem
    font-size 0.833333333rem

  &_non-padding
    padding 0
