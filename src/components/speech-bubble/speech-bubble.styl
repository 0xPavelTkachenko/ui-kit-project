@require "../colors"

.speech-bubble
  position relative

  &__triangle
    width 1.666666666rem
    height 1.666666666rem
    background-color $diamond
    border-radius 0.5rem
    position absolute
    left -0.333333333rem
    top 50%
    transform translateY(-50%) rotate(45deg)

  &__content
    position relative
    background-color $diamond
    border-radius 0.666666666rem

  &_color_red
    & ^[0]__triangle
      background-color $red

    & ^[0]__content
      background-color $red

  &_color_gray
    & ^[0]__triangle
      background-color $gray

    & ^[0]__content
      background-color $gray

  &_color_white
    & ^[0]__triangle
      background-color #fff

    & ^[0]__content
      background-color #fff

  &_size_small
    & ^[0]__triangle
      width 0.6rem
      height 0.6rem
      border-radius 0.2rem

    & ^[0]__content
      border-radius 0.4rem

  &_direction_right
    & ^[0]__triangle
      left unset
      right -0.333333333rem

  &_direction_top
    & ^[0]__triangle
      left 50%
      top -0.333333333rem
      transform translateX(-50%) rotate(45deg)

  &_direction_bottom
    & ^[0]__triangle
      left 50%
      top unset
      bottom -0.333333333rem
      transform translateX(-50%) rotate(45deg)
