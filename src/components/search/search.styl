$color-diamond = #4EB7A8
$color-red = #E75735
$color-gray = #E5E5E5

.search
  width 288px
  height 28px

  margin 2px

  position relative

  &__input
    width 100%
    height 100%

    padding 0 45px 0 12px
    margin 0
    border none

    background-color $color-gray

    border-radius 3px

  &__input:focus
    outline none
    box-shadow 0 0 2px #000

  &__btn
    width 33px
    height 100%

    cursor pointer

    background $color-diamond url('search-icon.png') no-repeat center

    border-radius 0 3px 3px 0

    position absolute
    top 0
    right 0

.search_state-not-found
  .search
    &__input
      color #fff
      background-color $color-diamond

    &__input::placeholder
      color #fff

    &__input:-ms-input-placeholder
      color #fff

    &__input::-ms-input-placeholder
      color #fff

    &__input::-webkit-input-placeholder
      color #fff

    &__input:-moz-placeholder
      color #fff

    &__input::-moz-placeholder
      color #fff

.search_color-red
  .search
    &__btn
      background-color $color-red

.search_color-red.search_state-not-found
  .search
    &__input
      background-color $color-red
